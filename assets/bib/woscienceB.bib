@article{ WOS:000461006900001,
Author = {Le Hoang Son and Kumar, Akshi and Sangwan, Saurabh Raj and Arora,
   Anshika and Nayyar, Anand and Abdel-Basset, Mohamed},
Title = {Sarcasm Detection Using Soft Attention-Based Bidirectional Long

@article{ WOS:000675196600001,
Author = {Luo, Jiawei and Bouazizi, Mondher and Ohtsuki, Tomoaki},
Title = {Data Augmentation for Sentiment Analysis Using Sentence
   Compression-Based SeqGAN With Data Screening},
